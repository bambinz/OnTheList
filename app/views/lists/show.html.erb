

<header>
  <h2> <%= @list.name %> </h2>
</header>
<div data-controller="item" data-item-list-id=<%= @list.id %> >
<ul>
<% @list.list_items.each do |list_item| %>
  <li>
    <%= list_item.item %> <a data-item-list-id=<%= list_item.id %> href="#" data-action="item#deleteItem">x</a>
  </li>
<% end %>
</ul>

  <select>
    <% @items.each do |item| %>
    <option value=<%= item.id %>><%= item.name %></option>
    <% end %>
  </select>
  <input data-target="item.itemName">
  <button data-action="click->item#createItem">Add Item</button>
</div>
